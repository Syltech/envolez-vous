<div class="circuit">
    <div class="distance">
        <div class="div">
            {{circuit.distance}}
            <span class="unite">km</span>
        </div>
        {% if circuit.specialite %}
            <div class="complement">{{ circuit.specialite }}</div>
        {% endif %}
    </div>
    <div class="depart">
        <p class="heure">
            <i class="far fa-clock" aria-hidden="true"></i>
            {{circuit.depart}}

        </p>
        <p class="tarif">{{circuit.tarif}} &euro;</p>
        {% if dates.dateAugmentation %}
            <p class="hausse">
                        +{{circuit.augmentation}} &euro; Ã  partir du
                        <span class="reduction">{{ dates.dateAugmentation | readableDate }}</span>
            </p>
        {% endif %}
    </div>

    <iframe
            width="350px"
            height="610px"
            src="{{circuit.openrunner}}"
            frameborder="0"
            allowfullscreen
          ></iframe>

    <div class="informations">
        {{ circuit.complements | mdToHtml | safe }}
    </div>
    {% if circuit.handisport %}
        <div class="handicourses">
            <div class="logo fab fa-accessible-icon" aria-hidden="true"></div>
            <p>Cette course propose un classement handisport</p>
        </div>
    {% endif %}
</div>